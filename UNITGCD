# cook your dish here
t=int(input())
while(t>0):
    t-=1
    n=int(input())
    if(n==1):
        print("1")
        print("1","1")
    else:
        
        print(n//2)
        if(n%2==0):
            for i in range(1,n+1,2):
                print("2",i,i+1)
        else:
            print("3","1","2",n)
            for i in range(3,n,2):
                print("2",i,i+1)
